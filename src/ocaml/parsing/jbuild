(* -*- tuareg -*- *)

module J = Jbuild_plugin.V1
;;

let ver =
  Scanf.sscanf J.ocaml_version "%s@.%s@." (fun maj min -> maj ^ min)
;;

Printf.ksprintf J.send {|
(copy_files# %s/*.ml{,i})

(library
  ((name parsing)
   (wrapped false)
   (modules_without_implementation (asttypes parsetree))
   (libraries (merlin_utils utils))))
|} ver
